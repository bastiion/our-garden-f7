{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
      "semicolon": [
        true,
        "never"
      ],
      "quotemark": [
        false,
        "single",
        "double"
      ],
      "max-line-length": [false],
      "space-before-function-paren": [false, "always"],
      "only-arrow-functions": [
        false
      ],
      "trailing-comma": [
        false,
        {
          "multiline": "always",
          "singleline": "always"
        }
      ],
      "arrow-parens": false,
      "object-literal-sort-keys": false,
      "object-literal-key-quotes": [
        false
      ],
      "max-classes-per-file": [
        false
      ],
      "ban-types": [
        false
      ],
      "no-console": [
        true,
        "log"
      ],
      "variable-name": [
        true,
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-leading-underscore"
      ],
      "interface-name": [
        false
      ],
      "ordered-imports": false
    }
  }
